@using AHLVBShopUI.Core.Model
@model ProductViewModel

@{
    ViewData["Title"] = "AddProduct";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>AddProduct</h1>

<h4>ProductDTO</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddProduct">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label hidden="hidden" asp-for="Id" class="control-label"></label>
                <input hidden="hidden" asp-for="Id" class="form-control" />
                <span hidden="hidden" asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProductName" class="control-label"></label>
                <input asp-for="ProductName" class="form-control" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>Markalar</label>
                <select class="form-control" name="BrandID">
                    @foreach (var item in Model.Brands)
                    {
                        <option value="@item.Id">@item.BrandName</option>


                    }
                    @foreach (var item in Model.Brands)
                    {
                        <input hidden="hidden" asp-for="BrandName" value="@item.BrandName" class="form-control" />
                    }
                </select>
            </div>

            <div class="form-group">
                <label>Kategoriler</label>
                <select class="form-control" name="CategoryID">
                    @foreach (var item in Model.Categories)
                    {
                        <option value="@item.Id">@item.CategoryName</option>


                    }
                    @foreach (var item in Model.Categories)
                    {
                        <input hidden="hidden" asp-for="CategoryName" value="@item.CategoryName" class="form-control" />
                    }
                </select>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

