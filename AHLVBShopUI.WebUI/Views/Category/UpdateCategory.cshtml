@using AHLVBShopUI.Core.DTO.Category
@model CategoryDTO
@{
    ViewData["Title"] = "UpdateCategory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Kategori Güncelle</h1>
<div class="row">
    <div class="col-md-4">
        <form asp-action="UpdateCategory" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" />

            <div class="form-group">
                <label hidden="hidden" asp-for="Id">@Model.Id</label>
                <input hidden="hidden" asp-for="Id" class="form-control" />

                <label asp-for="CategoryName">Kategori Adı</label>
                <input asp-for="CategoryName" class="form-control" />

            </div>

            <div class="form-group">
                <input type="submit" value="Güncelle" class="btn btn-primary" />
                <a class="btn btn-info" asp-action="Index">Kategorilere geri dön</a>
            </div>
        </form>
    </div>
</div>

