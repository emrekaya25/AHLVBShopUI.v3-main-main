@using AHLVBShopUI.Core.DTO.Company
@model CompanyDTO
@{
    ViewData["Title"] = "UpdateCompany";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Şirket Güncelle</h1>
<div class="row">
    <div class="col-md-4">
        <form asp-action="UpdateCompany" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" />

            <div class="form-group">
                <label hidden="hidden" asp-for="Id">@Model.Id</label>
                <input hidden="hidden" asp-for="Id" class="form-control" />

                <label asp-for="CompanyName">Şirket Adı</label>
                <input asp-for="CompanyName" class="form-control" />

                <label asp-for="Address">Adres</label>
                <input asp-for="Address" class="form-control" />

                <label asp-for="Phone">Telefon</label>
                <input asp-for="Phone" class="form-control" />

                <label asp-for="Email">Email</label>
                <input asp-for="Email" class="form-control" />

            </div>

            <div class="form-group">
                <input type="submit" value="Güncelle" class="btn btn-primary" />
                <a class="btn btn-info" asp-action="Index">Şirketlere geri dön</a>
            </div>
        </form>
    </div>
</div>

