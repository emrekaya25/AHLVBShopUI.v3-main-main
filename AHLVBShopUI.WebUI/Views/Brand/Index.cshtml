@using AHLVBShopUI.Core.DTO.Brand;
@model List<BrandDTO>

@{
    ViewData["Title"] = "Markalar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between">
                    <div class="header-title">
                        <h4 class="card-title">Markalar</h4>
                    </div>

                </div>
                <div class="card-body">

                    <div id="table" class="table-editable">
                        <span class="table-add float-right mb-3 mr-2">
                            <a href="/Brand/AddBrand" class="btn-sm mr-2 btn btn-primary" type="submit">Marka Ekle</a>

                        </span>
                        <table class="table table-bordered table-responsive-md table-striped text-center">
                            <thead>
                                <tr>
                                    <th>Marka</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td contenteditable="false">@item.BrandName</td>
@*                                         <td>
                                            <button class="btn-sm mr-2 btn btn-primary" type="submit">Detay</button>

                                        </td> *@
                                        <td>
                                            <form asp-controller="Brand" asp-action="UpdateBrand" method="get">
                                                <input type="hidden" name="Id" value="@item.Id" />
                                                <button class="btn-sm mr-2 btn btn-warning" type="submit">Güncelle</button>
                                            </form>
                                        </td>
                                        <td>
                                            <a href="/Brand/RemoveBrand/@item.Id" class="btn-sm mr-2 btn btn-danger">Sil</a>
                                        </td>
                                    </tr>

                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




