@using AHLVBShopUI.Core.DTO.Brand
@model BrandDTO
@{
    ViewData["Title"] = "AddBrand";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Marka Ekle</h1>
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddBrand" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" />

            <div class="form-group">
                <label asp-for="BrandName">Marka Adı</label>
                <input asp-for="BrandName" class="form-control" />
                
            </div>

            <div class="form-group">
                <input type="submit" value="Ekle" class="btn btn-primary" />
                <a class="btn btn-info" asp-action="Index">Markalara geri dön</a>
            </div>
        </form>
    </div>
</div>

